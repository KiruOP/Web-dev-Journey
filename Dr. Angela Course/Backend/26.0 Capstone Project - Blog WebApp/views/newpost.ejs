<%- include("partials/header.ejs") %>
<div class="form-container">
    <h2 class="form-heading">Write a Blog</h2>
    <form action="/posts" method="post">
        
        <!-- Image Upload -->
        <label for="image" class="form-label">Upload Image:</label>
        <input type="file" id="image" name="image" accept="image/*" class="image-input" disabled>
    
        <label for="post-title" class="form-label">Blog Title:</label>
        <input type="text" id="post-title" name="title" placeholder="Enter the blog title" class="title-input" required>

        <label for="post-content" class="form-label">Post Content:</label>
        <textarea id="post-content" name="content" rows="10" placeholder="Write your blog content here..." class="content-input" required></textarea>

        <input type="submit" value="Publish Blog"  class="publish-button">
    </form>
</div>
<%- include("partials/footer.ejs") %>